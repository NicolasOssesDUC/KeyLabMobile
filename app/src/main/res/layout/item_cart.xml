<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardBackgroundColor="@color/dark_surface"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation"
    app:strokeColor="@color/dark_text_tertiary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md">

        <!-- Product Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivProductoImagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_placeholder_image" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_sm">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvProductoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_md"
                android:textStyle="bold"
                android:textColor="@color/dark_text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Teclado Mecánico RGB" />

            <!-- Unit Price -->
            <TextView
                android:id="@+id/tvProductoPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/dark_text_secondary"
                android:layout_marginTop="@dimen/spacing_xs"
                tools:text="$89.990" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_sm">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:text="−"
                    android:textSize="18sp"
                    android:textColor="@color/dark_text_primary"
                    app:backgroundTint="@color/dark_input_background"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold"
                    android:textColor="@color/dark_text_primary"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/spacing_sm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:textColor="@color/dark_text_primary"
                    app:backgroundTint="@color/dark_input_background"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right Side (Price + Remove) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Remove Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="✕"
                android:textSize="16sp"
                android:textColor="@color/stock_out"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/tvPrecioTotal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:textColor="@color/dark_button_primary"
                tools:text="$89.990" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
